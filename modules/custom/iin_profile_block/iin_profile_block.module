/**
 * Implements hook_block_info().
 */
function iin_profile_block_block_info() {
  $blocks = array();
  $blocks['iin_profile_block'] = array(
    'info' => t('IIN Profile Block (for front page)'),
  );
  $blocks['header_user_profile_block'] = array(
